{{>layouts/header}}

<table class="table">
    <thead>
    <tr>
        <th scope="col">Id</th>
        <th scope="col">Email</th>
        <th scope="col">Password</th>
    </tr>
    </thead>
    <tbody>

    <!--  {{#attributeName}} {{/attributeName}} 으로 해당하는 객체를 사용할 범위를 지정 -->
    <!--  해당 객체가 데이터 묶음인 경우 데이터 수만큼 내부 코드를 반복 실행함  -->
    {{#members}}
        <tr>
            <th>{{id}}</th>
            <td><a href="/members/{{id}}">{{email}}</a></td>
            <td>{{password}}</td>
        </tr>
    {{/members}}

    </tbody>
</table>

<a href="/signup">회원가입</a>

{{>layouts/footer}}